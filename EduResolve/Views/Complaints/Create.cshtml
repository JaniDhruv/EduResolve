@model EduResolve.ViewModels.ComplaintCreateViewModel
@{
    ViewData["Title"] = "Submit Complaint";
}

<h1 class="mb-4">Submit a Complaint</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Category"></label>
                    <select asp-for="Category" class="form-control" asp-items="Model.CategoryOptions">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="RecipientUserId"></label>
                    <select asp-for="RecipientUserId" class="form-control" asp-items="Model.RecipientOptions">
                        <option value="">-- Select Recipient --</option>
                    </select>
                    <span asp-validation-for="RecipientUserId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Attachment"></label>
                <input asp-for="Attachment" type="file" class="form-control-file" />
                <span class="form-text text-muted">Optional: attach supporting documents (PDF, image, etc.).</span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-action="Index" class="btn btn-link">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
