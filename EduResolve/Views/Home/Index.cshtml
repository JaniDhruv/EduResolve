@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center py-5">
    <h1 class="display-4 mb-3">Welcome to EduResolve</h1>
    <p class="lead">A centralized grievance management platform for students, faculty, and administrators.</p>

    @if (User.Identity.IsAuthenticated)
    {
        <a class="btn btn-primary btn-lg mt-3" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>
    }
    else
    {
        <a class="btn btn-primary btn-lg mt-3" asp-controller="Account" asp-action="Login">Sign in</a>
        <a class="btn btn-outline-secondary btn-lg mt-3 ml-2" asp-controller="Account" asp-action="Register">Register</a>
    }
</div>
